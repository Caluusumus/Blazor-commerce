@page "/categories"

<h3>Categories</h3>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Title</th>
			<th scope="col"> - </th>
			<th scope="col"> - </th>
		</tr>
	</thead>
	<tbody>
		@foreach( var category in categories)
		{
			<CategoryRow category="category" />
		}
	</tbody>
</table>

<a href="/addCategory" class="btn btn-lg btn-outline-success">Add new Category</a>